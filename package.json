    "*.{js,ts,tsx,jsx}": [
      "npm run lint -- --fix --no-warn-ignored",
      "npm run format -- --write"
    ],
    "*.{json,md,html}": [
      "npm run format -- --write"
    ],
    "client/**/*.{js,jsx,ts,tsx}": [
      "npm --prefix client run lint -- --fix --no-warn-ignored",
      "npm --prefix client run format -- --write"
    ],
    "client/*.{json,md,html}": [
      "npm --prefix client run format -- --write"
    ]
